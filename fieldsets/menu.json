{
    "label": "Menu",
    "fields": {
        "type": {
            "label": "Type",
            "type": "select",
            "options": {
                "Nav": "uk-nav",
                "Subnav": "uk-subnav",
                "Iconnav": "uk-iconnav"
            }
        },
        "nav-style": {
            "label": "Style",
            "type": "select",
            "default": "",
            "options": {
                "None": "",
                "Default": "uk-nav-default",
                "Primary": "uk-nav-primary"
            },
            "show": "type == 'uk-nav'"
        },
        "nav-center": {
            "label": "Center",
            "type": "choose",
            "default": "",
            "true": "uk-nav-center",
            "show": "type == 'uk-nav'"
        },
        "subnav": {
            "label": "Style",
            "type": "select",
            "default": "",
            "options": {
                "Default": "",
                "Divider": "uk-subnav-divider",
                "Pill": "uk-subnav-divider"
            },
            "show": "type == 'uk-subnav'"
        },
        "iconnav-vertical": {
            "label": "Vertical alignment",
            "type": "choose",
            "true": "uk-iconnav-vertical",
            "show": "type == 'uk-iconnav'"
        }
    }
}