{
    "label": "Grid",
    "fields": {
        "masonry": {
            "label": "Masonry",
            "type": "checkbox",
            "default": false
        },
        "childWidth": {
            "label": "Child width",
            "help": "Set child items width as fraction of viewport width. Items itself can overwrite this.",
            "default": "",
            "type": "select",
            "options": {
                "- Select -": "",
                "Auto": "uk-child-width-auto",
                "Expand": "uk-child-width-expand",
                "1-6": "uk-child-width-1-6",
                "1-5": "uk-child-width-1-5",
                "1-4": "uk-child-width-1-4",
                "1-3": "uk-child-width-1-3",
                "1-2": "uk-child-width-1-2",
                "1-1": "uk-child-width-1-1"
            },
            "responsive": ["@s", "@m", "@l", "@xl"],
            "show": "!masonry"
        },
        "masonryChildWidth": {
            "label": "Child width",
            "help": "Set child items width as fraction of viewport width. Items itself can overwrite this.",
            "default": "",
            "type": "select",
            "options": {
                "- Select -": "",
                "1-6": "uk-child-width-1-6",
                "1-5": "uk-child-width-1-5",
                "1-4": "uk-child-width-1-4",
                "1-3": "uk-child-width-1-3",
                "1-2": "uk-child-width-1-2"
            },
            "responsive": ["@s", "@m", "@l", "@xl"],
            "show": "masonry"
        },
        "horizontal": {
            "label": "Horizontal alignment",
            "help": "Align child items horizontally.",
            "default": "",
            "type": "select",
            "options": {
                "- Select -": "",
                "Left": "uk-flex-left",
                "Center": "uk-flex-center",
                "Right": "uk-flex-right",
                "Between": "uk-flex-between",
                "Around": "uk-flex-around"
            },
            "responsive": ["@s", "@m", "@l", "@xl"],
            "show": "!masonry"
        },
        "vertical": {
            "label": "Vertical alignment",
            "help": "Align child items vertically. Only has an effect if container has fixed height.",
            "default": "",
            "type": "select",
            "options": {
                "- Select -": "",
                "Stretch": "uk-flex-stretch",
                "Top": "uk-flex-top",
                "Middle": "uk-flex-middle",
                "Bottom": "uk-flex-bottom"
            },
            "show": "!masonry"
        },
        "gutter": {
            "label": "Gutter",
            "help": "Spacing between items. Decreases relative to given gutter on smaller devices.",
            "default": "",
            "type": "select",
            "options": {
                "Small": "uk-grid-small",
                "Default": "",
                "Medium": "uk-grid-medium",
                "Large": "uk-grid-large",
                "Collapse": "uk-grid-collapse"
            }
        },
        "divider": {
            "label": "Divider",
            "help": "Separate items with lines.",
            "default": "",
            "type": "choose",
            "true": "uk-grid-divider",
            "show": "!masonry"
        },
        "match": {
            "label": "Match height",
            "help": "Match the height of cards",
            "default": "",
            "type": "choose",
            "true": "uk-grid-match",
            "show": "!masonry"
        },
        "parallax": {
            "label": "Parallax effect",
            "help": "Parallax translation value",
            "default": 0,
            "type": "number",
            "attrs": {
                "min": 0,
                "step": 10
            }
        },
        "viewportHeight": {
            "label": "Enable viewport height",
            "type": "checkbox",
            "default": false
        },
        "offsetTop": {
            "label": "Offset top",
            "help": "Subtracts the element's top offset from its height.",
            "type": "checkbox",
            "default": true,
            "show": "viewportHeight"
        },
        "offsetBottom": {
            "label": "Offset bottom",
            "help": "Subtracts the height (true) of the sibling that immediately follows the element, the given percentage (Number), Pixel (px) value from element's own height or the given element's height.",
            "type": "text",
            "default": "false",
            "show": "viewportHeight"
        }
    }
}
